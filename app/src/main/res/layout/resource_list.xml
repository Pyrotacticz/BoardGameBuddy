<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginBottom="30dp"
    android:orientation="horizontal"
    android:background ="@drawable/resource_bar">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/icon_square"
        android:backgroundTint="@color/black_l2"
        android:layout_marginStart="10dp">

        <ImageButton
            android:id="@+id/ic_resId"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@drawable/icon_square"
            tools:srcCompat="@tools:sample/avatars" />

        <EditText
            android:id="@+id/resource_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/black_l3"
            android:fontFamily="@font/open_sans"
            android:imeOptions="actionDone"
            android:inputType="text|textNoSuggestions"
            android:maxLength="10"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="10.5sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:paddingVertical="5dp"
            android:selectAllOnFocus="true"
            android:cursorVisible="false"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/subtractId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black_l1"
            android:src="@drawable/ic_minus"
            app:tint="#AEADE1"
            android:layout_gravity="center"
            />

        <EditText
            android:id="@+id/countId"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black_l2"
            android:ems="6"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="3"
            android:selectAllOnFocus="true"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:paddingVertical="2dp"
            android:cursorVisible="false"
            android:fontFamily="@font/open_sans"
            />

        <ImageButton
            android:id="@+id/addId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black_l1"
            android:src="@drawable/ic_plus"
            app:tint="#AEADE1"
            android:layout_gravity="center"
            />

        </LinearLayout>

        <ImageButton
            android:id="@+id/deleteId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/ic_svg_x"
            app:tint="@color/white"
            android:layout_marginStart="-25dp"/>

    </LinearLayout>
