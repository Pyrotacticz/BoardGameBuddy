<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#232323"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_marginBottom="30dp"
    app:layout_constraintHeight="70dp"
    app:layout_constraintWidth="360dp">

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ic_resId"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars" />

        <EditText
            android:id="@+id/resource_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:imeOptions="actionDone"
            android:inputType="text" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/subtractId"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:backgroundTint="#232323"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:src="@drawable/ic_minus"
        android:translationY="10dp"
        app:tint="#AEADE1" />

    <EditText
        android:id="@+id/countId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:ems="6"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLength="6"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="40sp"/>

    <ImageButton
        android:id="@+id/addId"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:backgroundTint="#232323"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:src="@drawable/ic_plus"
        android:translationY="10dp"
        app:tint="#AEADE1" />

    <ImageButton
        android:id="@+id/deleteId"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:src="@drawable/ic_svg_x"
        android:textSize="15sp" />

</LinearLayout>